@model Jordana.Models.TouristsSite

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "ManageDestinations";
}


<div class="container mt-4">
    <h2 class="mb-3">Edit Tourist Site</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit"method="post">
              

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SiteName"></label>
                            <input asp-for="SiteName" class="form-control" />
                            <span asp-validation-for="SiteName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SiteDescription"></label>
                            <textarea asp-for="SiteDescription" class="form-control"></textarea>
                            <span asp-validation-for="SiteDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Region"></label>
                            <input asp-for="Region" class="form-control" />
                            <span asp-validation-for="Region" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SiteLocation"></label>
                            <input asp-for="SiteLocation" class="form-control" />
                            <span asp-validation-for="SiteLocation" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Lat"></label>
                            <input asp-for="Lat" class="form-control" />
                            <span asp-validation-for="Lat" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Long"></label>
                            <input asp-for="Long" class="form-control" />
                            <span asp-validation-for="Long" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EntryFee"></label>
                            <input asp-for="EntryFee" class="form-control" />
                            <span asp-validation-for="EntryFee" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OpeningHours"></label>
                            <input asp-for="OpeningHours" class="form-control" />
                            <span asp-validation-for="OpeningHours" class="text-danger"></span>
                        </div>
                   
                    </div>
                </div>

                <input type="hidden" asp-for="SiteId" />

                <div class="form-group text-end">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="ManageDestinations" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
