<h2>Create Review</h2>

<form method="post" asp-action="CreateReview">
    <div class="form-group">
        <label class="control-label">Review_ID</label>
        <input class="form-control" name="Review_ID" />
    </div>

    <div class="form-group">
        <label class="control-label">CreationDate</label>
        <input class="form-control" name="CreationDate" />
    </div>
    <div class="form-group">
        <label class="control-label">CreatedBy</label>
        <input class="form-control" name="CreatedBy" /> 
    </div>
    <div class="form-group">
        <label class="control-label">UpdatedBy</label>
        <input class="form-control" name="UpdatedBy" />
    </div>
    <div class="form-group">
        <label class="control-label">User_ID</label>
        <input class="form-control" name="User_ID" />
    </div>
    <div class="form-group">
        <label class="control-label">Site_ID</label>
        <input class="form-control" name="Site_ID" />
    </div>

    <div class="form-group">
        <label class="control-label">Rating</label>
        <input class="form-control" name="Rating" />
    </div>

    <div class="form-group">
        <label class="control-label">Comment</label>
        <textarea class="form-control" name="Comment" required minlength="15"></textarea>
    </div>

    <div class="form-group">
        <label class="control-label">Review_Date</label>
        <input type="date" class="form-control" name="Review_Date" />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="ManageRating" class="btn btn-secondary">Back to List</a>
</form>

