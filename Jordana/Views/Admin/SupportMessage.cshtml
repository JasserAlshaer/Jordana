@model List<SupportMessage>;
@{
	Layout = "_LayoutAdmin";
	ViewData["Title"] = "SupportMessage";
}
<main class="content">
	<div class="container-fluid p-0">

		<h1 class="h3 mb-3"><strong>Support</strong> Page </h1>

		<div class="row">
			<div class="col-18 col-lg-16 col-xxl-12 d-flex">
				<div class="card flex-fill">
					<div class="card-header">

						<h5 class="card-title mb-0"></h5>
					</div>
					<table class="table table-hover my-0">
						<thead>
							<tr>
								<th>Id</th>
								<th> Name</th>
								<th class="d-none d-xl-table-cell">Email</th>
								<th class="d-none d-xl-table-cell">Subject</th>

								<th class="d-none d-md-table-cell">Message</th>
								<th>Action</th>

							</tr>

						</thead>
						<tbody>
							@foreach(var item in Model)
							{
								
							
							<tr>
									<td>@item.Id</td>
									<td class="d-none d-xl-table-cell">@item.Name</td>
									<td class="d-none d-xl-table-cell">@item.Email</td>
									<td>@item.Subject</td>
									<td class="d-none d-md-table-cell">@item.Message</td>




									<td>

										<a class="btn btn-outline-danger" style="margin-left:12px;" asp-action="DeleteSupportMessage" asp-route-Id="@item.Id">Delete</a>
									</td>



								</tr>
							}



							</tbody>
						</table>
					</div>
				</div>





			</div>






		</div>
	</main>
}
