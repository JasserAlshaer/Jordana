@{
   
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "GetBookingDetails";
}

<main class="d-flex w-100 vh-100 flex-column overflow-auto">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Booking Form</h2>
                        <form>
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label class="form-label">Site Name</label>
                                    <input class="form-control form-control-lg" type="text" name="siteName" required />
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label">Members</label>
                                    <input class="form-control form-control-lg" type="text" name="members" required />
                                </div>

                                <div class="mb-3 col-md-6">
                                    <label class="form-label">Booking Date</label>
                                    <input class="form-control form-control-lg" type="date" name="bookingDate" required />
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label">Execution Time</label>
                                    <input class="form-control form-control-lg" type="time" name="executionTime" required />
                                </div>

                                <div class="mb-3 col-md-6">
                                    <label class="form-label">Number of Tickets</label>
                                    <input class="form-control form-control-lg" type="number" name="ticketCount" min="1" required />
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label class="form-label">Total Price</label>
                                    <input class="form-control form-control-lg" type="number" name="totalPrice" min="0" step="0.01" required />
                                </div>
                            </div>

                            <div class="text-center mt-3">
                                <button type="submit" class="btn btn-primary px-5">Submit Booking</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- جدول الحجوزات -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Booking Submissions</h5>
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th class="d-none d-xl-table-cell">Submission Time</th>
                                    <th class="d-none d-xl-table-cell">Comment</th>
                                    <th>Rate</th>
                                    <th class="d-none d-md-table-cell">Site Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Leen Omar</td>
                                    <td class="d-none d-xl-table-cell">21/9/2025</td>
                                    <td class="d-none d-xl-table-cell">Add Comment</td>
                                    <td>5 Stars</td>
                                    <td class="d-none d-md-table-cell">Petra</td>
                                    <td><button class="btn btn-danger btn-sm">Delete</button></td>
                                </tr>
                                <!-- Add dynamic rows here later -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>



        <section style="background-color: #eee;">
            <div class="container my-5 py-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-12 col-lg-10 col-xl-8">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-start align-items-center">
                                    <img class="rounded-circle shadow-1-strong me-3"
                                         src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60"
                                         height="60" />
                                    <div>
                                        <h6 class="fw-bold text-primary mb-1">
                                            Lily Coleman
                                        </h6>
                                        <p class="text-muted small mb-0">
                                            Shared publicly - Jan 2020
                                        </p>
                                    </div>
                                </div>

                                <p class="mt-3 mb-4 pb-2">
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                                    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
                                    veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip
                                    consequat.
                                </p>

                               
                            </div>
                            
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>



    </div>
</main>
