@model Jordana.Models.EmailConfirmationViewModel

@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="text-center p-5 shadow rounded bg-white" style="max-width: 600px; border-top: 5px solid #b88e5d;">
        <i class="fas fa-check-circle fa-3x mb-3" style="color: #b88e5d;"></i>
        <h2 class="mb-3" style="color: #b88e5d;">Email Confirmed</h2>

        <p class="lead">@Model.Message</p>

        <div class="mt-4">
            <a href="/Home/Login" class="btn btn-outline-dark" style="border-color: #b88e5d; color: #b88e5d;">
                Log In Now
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">This confirmation was linked to: <strong>@Model.Email</strong></small>
        </div>
    </div>
</div>
