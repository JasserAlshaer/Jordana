@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Jordana - Sign Up</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/loginDesign/css/style.css" />
</head>
<body>
    <div class="container clearfix">
        <div class="form registration">
            <a class="logo" href="">
                <img src="~/loginDesign/img/login.png" alt="Logo" />
            </a>
            <form asp-action="Signup"method="post">
               
                <p>
                    <label>Full Name <span>*</span></label>
                    <input type="text" name="fullname" required>
                </p>
                <p>
                    <label>Phone Number<span>*</span></label>
                    <input type="text" name="phonenumber"required>
                </p>
                <p>
                    <label>Email<span>*</span></label>
                    <input type="email"name="email" required>
                </p>
                <p style="position: relative;">
                    <label>Password <span>*</span></label>
                    <input type="password" name="password" id="password" required style="padding-right: 35px;">


                    <!-- Eye icon (visible by default) -->
                    <svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                         fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                         stroke-linejoin="round" class="feather feather-eye"
                         style="position: absolute; top: 30px; right: 15px; cursor: pointer;">
                        <path d="M1 8s3-6 7-6 7 6 7 6-3 6-7 6-7-6-7-6z" />
                        <circle cx="8" cy="8" r="2" />
                    </svg>

                    <!-- Eye-off icon (hidden by default) -->
                    <svg id="eyeOffIcon" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                         fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                         stroke-linejoin="round" class="feather feather-eye-off"
                         style="position: absolute; top: 30px; right: 15px; cursor: pointer; display: none;">
                        <path d="M17 17L1 1" />
                        <path d="M10.94 10.94a2.5 2.5 0 0 1-3.54-3.54" />
                        <path d="M2.12 2.12C4.38 0.84 6.8 0 9 0c5.52 0 10 8 10 8s-1.38 2.42-3.12 4.29" />
                    </svg>
                    <small id="passwordStrength" style="display:block; margin-top:5px; color:#888;"></small>

                </p>
    
                <script>
                    const passwordField = document.getElementById("password");
                    const eyeIcon = document.getElementById("eyeIcon");
                    const eyeOffIcon = document.getElementById("eyeOffIcon");

                    eyeIcon.addEventListener("click", () => {
                      passwordField.type = "text";
                      eyeIcon.style.display = "none";
                      eyeOffIcon.style.display = "block";
                    });

                    eyeOffIcon.addEventListener("click", () => {
                      passwordField.type = "password";
                      eyeOffIcon.style.display = "none";
                      eyeIcon.style.display = "block";
                    });

                </script>

              
                <p>
                    <label>Enter password again<span>*</span></label>
                    <input type="password"name="repassword" required>
                </p>
                <p>
                    <label>
                        <a asp-action= "Login">Have an account?</a>
                    </label>
                    <input type="submit" value="Sign Up" />
                </p>
            </form>
        </div>
    </div>
    <footer>
        &copy; Jordana , All rights reserved.
    </footer>
</body>
</html>
